{
    "name": "polidog/use-php",
    "description": "React Hooks-like PHP components with server-side state management",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Polidog\\UsePhp\\": "src/"
        },
        "files": [
            "src/Html/Elements.php",
            "src/Runtime/Hooks.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Polidog\\UsePhp\\Tests\\": "tests/",
            "Polidog\\UsePhp\\AppRouter\\": "packages/usephp-app-router/src/",
            "Polidog\\UsePhp\\AppRouter\\Tests\\": "packages/usephp-app-router/tests/"
        }
    },
    "authors": [
        {
            "name": "polidog",
            "email": "polidogs@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.5"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.93",
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^11.0"
    },
    "scripts": {
        "phpstan": "phpstan analyse",
        "cs-check": "php-cs-fixer fix --dry-run --diff",
        "cs-fix": "php-cs-fixer fix"
    },
    "bin": [
        "bin/usephp"
    ]
}
