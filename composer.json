{
    "name": "polidog/use-php",
    "description": "React Hooks-like PHP components with server-side state management",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Polidog\\UsePhp\\": "src/"
        },
        "files": [
            "src/Html/Elements.php",
            "src/Runtime/Hooks.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Polidog\\UsePhp\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "polidog",
            "email": "polidogs@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0"
    }
}
